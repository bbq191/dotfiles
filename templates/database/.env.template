# 数据库环境变量配置模板
# 复制此文件为 .env 并根据实际情况修改配置

# =============================================================================
# PostgreSQL 配置
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=myapp_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# PostgreSQL 连接字符串
DATABASE_URL=postgresql://postgres:password@localhost:5432/myapp_dev

# =============================================================================
# MySQL 配置
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=myapp_dev
MYSQL_USER=root
MYSQL_PASSWORD=password

# MySQL 连接字符串
MYSQL_URL=mysql://root:password@localhost:3306/myapp_dev

# =============================================================================
# Redis 配置
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis 连接字符串
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MongoDB 配置
# =============================================================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=myapp_dev
MONGO_USER=
MONGO_PASSWORD=

# MongoDB 连接字符串
MONGODB_URL=mongodb://localhost:27017/myapp_dev

# =============================================================================
# SQLite 配置
# =============================================================================
SQLITE_DATABASE=./database/development.sqlite3

# =============================================================================
# 测试数据库配置
# =============================================================================
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/myapp_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# 连接池配置
# =============================================================================
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# SSL/TLS 配置
# =============================================================================
DB_SSL_MODE=prefer
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_CA=

# =============================================================================
# 其他配置
# =============================================================================
DB_LOGGING=true
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000